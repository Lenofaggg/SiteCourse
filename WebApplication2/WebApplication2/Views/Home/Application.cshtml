@model WebApplication2.Models.job_apply

@{
    ViewBag.Title = "Application";
}

<h1>Заявка на работу</h1>

<form class="form" action="/Home/Application" method="post">
    @Html.AntiForgeryToken()
    <p>
        <label for="name_j_apply"><strong>ФИО:</strong></label><br />
        @Html.EditorFor(model => model.name_j_apply)
    </p>
    <hr />
    <p>
        <label for="id_passport"><strong>Паспорт:</strong></label><br />
        @Html.EditorFor(model => model.id_passport)
    </p>
    <hr />
    <p>
        <label for="name_prof"><strong>Профессия:</strong></label><br />
        @Html.EditorFor(model => model.name_prof)
    </p>
    <hr />
    <p>
        <label for="telephone"><strong>Номер телефона:</strong></label><br />
        @Html.EditorFor(model => model.telephone)
    </p>
    <hr />
    <p>
        <label for="info_j_apply"><strong>Опыт работы кратко:</strong></label><br />
        @Html.EditorFor(model => model.info_j_apply)
    </p>
    <input type='submit' value="Подать заявку" />
</form>
